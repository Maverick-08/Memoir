generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email    String   @id @unique
  password String
  name     String
  degree   String?
  branch   String?
  yearOfPassingOut Int?
  isVerified Boolean @default(false)
  linkedIn String?
  xHandle  String?
  createdAt DateTime @default(now())
  post Post[]
}

model Post {
  id String  @id @default(cuid())
  email String
  name String
  degree String
  branch String
  yearOfPassingOut Int 
  title String
  message String?
  createdAt DateTime
  user User @relation(fields: [email],references: [email])
}


model InterviewExperience {
  id       String   @id @default(cuid())
  name     String
  email    String
  companyName String
  compensation Float
  experienceType String
  year     DateTime
  interviewStatus String
  roundDetails RoundDetails[]
  createdAt DateTime @default(now())
}

model RoundDetails {
  id       String   @id @default(cuid())
  interviewExperienceId String
  roundName String
  roundType String
  note     String?
  questions Question[]
  interviewExperience InterviewExperience @relation(fields: [interviewExperienceId], references: [id])
}

model Question {
  id       String   @id @default(cuid())
  title    String
  description String
  link     String?
  roundDetails RoundDetails @relation(fields: [roundDetailsId], references: [id])
  roundDetailsId String
}
