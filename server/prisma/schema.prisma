generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email    String   @id @unique
  password String
  name     String
  degree   String?
  branch   String?
  yearOfPassingOut Int?
  isVerified Boolean? @default(false)
  linkedIn String?
  xHandle  String?
  createdAt DateTime? @default(now())
  authCookie String?
  post Post[]
}

model Post {
  email String @id
  title String
  message String?
  createdAt DateTime
  user User @relation(fields: [email],references: [email])
}

model InterviewExperience{
  email String @id
  companyName String
  compensation Int
  interviewStatus String
  year DateTime
  roundDetails Json[]
}